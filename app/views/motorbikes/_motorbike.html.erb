<div id="<%= dom_id motorbike %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= motorbike.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Model:</strong>
    <%= motorbike.model %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Year:</strong>
    <%= motorbike.year %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this motorbike", motorbike, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this motorbike', edit_motorbike_path(motorbike), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
